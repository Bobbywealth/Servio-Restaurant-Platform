{
  "name": "servio-frontend",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/ensure-port.js 3000 && NODE_OPTIONS='--max-old-space-size=2048' next dev -p 3000",
    "dev:fast": "node scripts/ensure-port.js 3000 && NODE_OPTIONS='--max-old-space-size=2048' SKIP_ENV_VALIDATION=1 next dev -p 3000 --turbo",
    "build": "NODE_OPTIONS='--max-old-space-size=2048' next build",
    "export": "next export",
    "start": "next start",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx,.ts,.tsx && node scripts/check-api-usage.js",
    "install:ci": "NODE_OPTIONS='--max-old-space-size=1024' npm ci --legacy-peer-deps",
    "test": "npm run test:e2e",
    "test:e2e": "playwright install --with-deps && playwright test",
    "test:all": "npm run test:e2e",
    "playwright:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^3.3.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-dropzone": "^4.2.2",
    "autoprefixer": "^10.4.0",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.294.0",
    "next": "^16.1.3",
    "postcss": "^8.4.0",
    "quill": "^2.0.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.6.0",
    "react-image-crop": "^11.0.10",
    "react-quill": "^2.0.0",
    "socket.io-client": "^4.7.4",
    "styled-jsx": "^5.1.1",
    "tailwindcss": "^3.4.16",
    "typescript": "^5",
    "web-vitals": "^3.5.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@svgr/webpack": "^8.1.0",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
