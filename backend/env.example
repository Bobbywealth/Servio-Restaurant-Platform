## Servio Backend environment variables
## Copy to `backend/.env` (or export in your shell) and fill in values.

# Server
PORT=3002
FRONTEND_URL=http://localhost:3000

# Auth
# IMPORTANT: change this in production.
JWT_SECRET=dev_insecure_jwt_secret_change_me

# OpenAI (required for STT/LLM/TTS features)
OPENAI_API_KEY=

# Text-to-Speech (optional overrides)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# Vapi Voice AI Configuration (for phone ordering)
VAPI_API_KEY=
VAPI_WEBHOOK_SECRET=
VAPI_ASSISTANT_ID=
VAPI_PHONE_NUMBER_ID=
VAPI_RESTAURANT_ID=

# Database (Render Postgres)
# Required in production (and recommended in dev).
DATABASE_URL=
# Render often requires SSL. Set to true if your provider requires it.
DATABASE_SSL=false

# Twilio SMS Configuration (for marketing features)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Configuration (for marketing features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# Base URL for public links and QR codes
BASE_URL=http://localhost:3000

# PRODUCTION CONFIGURATION
# =========================

# Performance & Production Settings
NODE_ENV=production
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300000
MAX_CACHE_SIZE=1000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000

# Storage Configuration (AWS S3 for production)
STORAGE_BUCKET=servio-production-storage
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_ENDPOINT=s3.amazonaws.com

# AWS SES Email Configuration (for production)
SESV2_REGION=us-east-1
SESV2_ACCESS_KEY_ID=
SESV2_SECRET_ACCESS_KEY=

# Worker Configuration
WORKER_POLL_INTERVAL=5000

# Production CORS Origins (comma-separated)
CORS_ORIGINS=https://servio-web.onrender.com

