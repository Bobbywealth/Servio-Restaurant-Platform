{
  "name": "servio-backend",
  "version": "1.1.0",
  "description": "Servio Restaurant Platform Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=2048' tsx watch --clear-screen=false --ignore 'data/**' src/server.ts",
    "dev:worker": "NODE_OPTIONS='--max-old-space-size=1024' tsx watch --clear-screen=false --ignore 'data/**' src/worker.ts",
    "dev:fast": "NODE_OPTIONS='--max-old-space-size=2048' tsx watch --clear-screen=false --ignore 'data/**' src/server.ts",
    "build": "tsc && mkdir -p dist/database && cp -r src/database/migrations dist/database/",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "seed:menu": "tsx src/scripts/seed-menu-items.ts",
    "seed:modifiers": "tsx src/scripts/seed-modifiers.ts",
    "seed:all": "tsx src/scripts/seed-menu-items.ts && tsx src/scripts/seed-modifiers.ts",
    "create-owner": "tsx src/scripts/create-owner-user.ts",
    "lint": "eslint src --ext .ts,.js",
    "test": "jest --passWithNoTests",
    "install:ci": "NODE_OPTIONS='--max-old-space-size=1024' npm ci --legacy-peer-deps"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.971.0",
    "@aws-sdk/s3-request-presigner": "^3.971.0",
    "@sentry/node": "^8.47.0",
    "@sentry/profiling-node": "^8.47.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bottleneck": "^2.19.5",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "fastest-levenshtein": "^1.0.16",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "hot-shots": "^13.0.0",
    "ioredis": "^5.9.2",
    "isomorphic-dompurify": "^2.19.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.12",
    "openai": "^4.20.1",
    "opossum": "^9.0.0",
    "pg": "^8.17.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "twilio": "^5.11.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsx": "^4.6.2"
  }
}
