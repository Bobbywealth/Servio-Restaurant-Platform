## Servio Backend environment variables
## Copy to `backend/.env` (or export in your shell) and fill in values.

# Server
PORT=3002
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# Auth
# IMPORTANT: change this in production.
JWT_SECRET=dev_insecure_jwt_secret_change_me

# OpenAI (required for STT/LLM/TTS features)
OPENAI_API_KEY=

# Text-to-Speech (optional overrides)
# Models: tts-1 (faster, cheaper) or tts-1-hd (higher quality, better clarity)
OPENAI_TTS_MODEL=tts-1-hd
# Voices: alloy, echo, fable, onyx, nova (most expressive), shimmer
OPENAI_TTS_VOICE=nova

# Vapi Voice AI Configuration (for phone ordering)
VAPI_API_KEY=
VAPI_WEBHOOK_SECRET=
VAPI_ASSISTANT_ID=
VAPI_PHONE_NUMBER_ID=
VAPI_RESTAURANT_ID=

# Restaurant defaults
# Used when a request doesn't have a restaurant context (e.g. some voice hooks).
# In production, set this to your real restaurant id (we recommend id == slug for simplicity).
DEFAULT_RESTAURANT_ID=

# Demo data (LOCAL ONLY)
# Demo users/restaurant/menu are auto-seeded when NODE_ENV != production.

# Bootstrap (for production or fresh DB setup)
# Run: npm run bootstrap:restaurant
BOOTSTRAP_RESTAURANT_ID=
BOOTSTRAP_RESTAURANT_SLUG=
BOOTSTRAP_RESTAURANT_NAME=
BOOTSTRAP_TIMEZONE=America/New_York
BOOTSTRAP_WEBSITE=
BOOTSTRAP_USER_EMAIL=
BOOTSTRAP_USER_PASSWORD=
BOOTSTRAP_USER_NAME=Kitchen
BOOTSTRAP_USER_ROLE=manager
BOOTSTRAP_USER_PIN=
BOOTSTRAP_FORCE_PASSWORD=false
BOOTSTRAP_IMPORT_MENU=false
BOOTSTRAP_MENU_JSON_PATH=data/menu/sasheys_menu_vapi.json

# Purge demo data (DANGEROUS)
# Run: CONFIRM_PURGE_DEMO_DATA=true npm run purge:demo
CONFIRM_PURGE_DEMO_DATA=false

# Optional DB config (defaults to local SQLite in ./data)
# DATABASE_URL=
# DATABASE_SSL=false

# Twilio SMS Configuration (for marketing features)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Configuration (for marketing features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=

# Base URL for public links and QR codes
BASE_URL=http://localhost:3000

